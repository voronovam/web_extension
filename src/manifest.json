{
  "name": "__MSG_name__",
  "version": "1.0.0",
  "manifest_version": 3,
  "default_locale": "en",
  "description": "__MSG_description__",
  "icons": {
    "32": "./icons/icon-32.png",
    "64": "./icons/icon-64.png",
    "128": "./icons/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "run_at": "document_idle",
      "all_frames": false,
      "js": [
        "content-script.js"
      ],
      "css": ["content-script.css"]
    }
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "web_accessible_resources": [
    {
      "resources": ["content-script.css"],
      "matches": ["*://*/*"]
    }
  ]
}